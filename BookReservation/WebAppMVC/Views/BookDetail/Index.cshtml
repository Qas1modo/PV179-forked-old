@model BookDetailIndexModel

<div class="card-body">
    <h4 class="card-title">
        @Model.bookInfo.Name
    </h4>

    <h5 class="card-subtitle mb-2 text-muted">
        @Model.bookInfo.Author.Name
    </h5>

    <h5 class="card-subtitle mb-2 text-muted">
        @Model.bookInfo.Genre.Name
    </h5>

    <p class="card-text">
        @Model.bookInfo.Description
    </p>

    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal">
        Add to cart
    </button>

    @if (this.User.IsInRole("Admin"))
    {
        <a href="@Url.Action("DeleteBook", "BookDetail", new { bookId = Model.bookInfo.Id })" class="btn btn-danger">Delete Book</a>
    }
</div>

<!-- The Modal -->
<div class="modal" id="myModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">For how many days would you like to reserve this book?</h4>
            </div>

            <!-- Modal body -->
            <form method="post">
                <div class="modal-body">
                    <label for="points">Days (between 1 and 365):</label>
                    <input type="number" id="days" name="days" min="1" max="365" required>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="submit" formaction="@Url.Action("AddToCart", "BookDetail", new { bookId = Model.bookInfo.Id })" class="btn btn-primary mb-2">Submit</button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

<h4 class="mt-5 card-title">Book reviews</h4>
@{
    if (Model.reviews.Count() != 0)
    {
        foreach (var review in Model.reviews)
        {
            <div class="card my-3" style="width: 100%;">

                <div class="card-body">
                    <h5 class="card-title">
                        @review.Name
                    </h5>

                    <h6 class="card-subtitle mb-2 text-muted">
                        Score: @review.Score
                    </h6>

                    @if (review.Description != null)
                    {
                        <p class="card-text">
                            @review.Description
                        </p>
                    }
                </div>
            </div>
        }
        <a class="btn btn-primary @(Model.hasMore == true ? "" : "d-none")" href="@Url.Action("MoreReviews", "BookDetail",
                                new { bookId = Model.bookInfo.Id,
                                    showedReviews = Model.reviews.Count() })">Show more reviews</a>
    }

    else
    {
        <p>This product does not have any reviews. Be first to review this product!</p>
    }
}

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal1">
    Add review
</button>

<!-- The Modal1 -->
<div class="modal" id="myModal1" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Add your review</h4>
            </div>

            <form method="post">
                <!-- Modal body -->
                <div class="modal-body">
                    <div class="form-group">
                        <label>Score: </label>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="1" required>
                            <label class="form-check-label" for="inlineRadio1">1</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="2" required>
                            <label class="form-check-label" for="inlineRadio2">2</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="3" required>
                            <label class="form-check-label" for="inlineRadio3">3</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio4" value="4" required>
                            <label class="form-check-label" for="inlineRadio4">4</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio5" value="5" required>
                            <label class="form-check-label" for="inlineRadio5">5</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio6" value="6" required>
                            <label class="form-check-label" for="inlineRadio6">6</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio7" value="7" required>
                            <label class="form-check-label" for="inlineRadio7">7</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio8" value="8" required>
                            <label class="form-check-label" for="inlineRadio8">8</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio9" value="9" required>
                            <label class="form-check-label" for="inlineRadio9">9</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio10" value="10" required>
                            <label class="form-check-label" for="inlineRadio10">10</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Down below you can write your book review</label>
                        <textarea class="form-control" name="description" id="exampleFormControlTextarea1" rows="3"></textarea>
                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="submit" formaction="@Url.Action("AddReview", "BookDetail", new { bookId = Model.bookInfo.Id })" class="btn btn-primary mb-2">Submit</button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>
